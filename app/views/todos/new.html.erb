<div class="card mt-5 mx-auto p-4" style="width: 350px">
  <h2 class="font-weight-bold">Create a Todo</h2>

  <% if @todo.errors.any? %>
    <h3>The following errors prevented the todo from being saved.</h3>
    <ul>
      <% @todos.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @todo do |f| %>
    <div>
      <%= f.label :name, class: "font-weight-bold" %><br>
      <%= f.text_field :name %>
    </div>

    <div class="my-4">
      <%= f.label :description, class: "font-weight-bold" %><br>
      <%= f.text_field :description %>
    </div>

    <div class="mx-auto">
      <%= f.submit class: "m-2 btn btn-primary" %>
      <%= link_to "Back to list", todos_path, class: "m-2 btn btn-primary" %>
    </div>
  <% end %>

</div>