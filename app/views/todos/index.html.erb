<div class="container fluid">
  <div class="card mx-auto mt-5 shadow-sm bg-white rounded">
    <div class="card-body">
      <h3 class="card-title">Welcome to your Todo List</h3>
      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @todos.each do |todo| %>
          <tr>
            <td>
              <a href="<%= todo_path(todo) %>"><%= todo.name %></a>
            </td>
            <td><%= todo.description %></td>
            <td><%= link_to edit_todo_path(todo) do %>
                <%= fa_icon 'edit', class: "text-success text-bold mr-4" %>
              <% end %>
              <%= link_to todo_path(todo), method: :delete, data: { confirm: 'Are you sure?'} do %>
                <%= fa_icon 'trash', class: "text-danger text-bold" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to 'New ToDo', new_todo_path, class: "btn btn-primary btn-sm text-light mx-1 my-3" %>
    </div>
  </div>
</div>